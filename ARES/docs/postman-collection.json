{
  "info": {
    "name": "ARES API (MVP)",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Auth - Signup",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "url": "http://localhost:8787/api/auth/signup",
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"user@example.com\",\n  \"password\": \"password123\",\n  \"name\": \"Ares User\"\n}"
        }
      }
    },
    {
      "name": "Auth - Login",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "url": "http://localhost:8787/api/auth/login",
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"user@example.com\",\n  \"password\": \"password123\"\n}"
        }
      }
    },
    {
      "name": "Billing - Create Order",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" },
          { "key": "Authorization", "value": "Bearer {{token}}" }
        ],
        "url": "http://localhost:8787/api/billing/razorpay/order",
        "body": {
          "mode": "raw",
          "raw": "{\n  \"plan\": \"INDIVIDUAL\"\n}"
        }
      }
    },
    {
      "name": "Billing - Verify Payment",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" },
          { "key": "Authorization", "value": "Bearer {{token}}" }
        ],
        "url": "http://localhost:8787/api/billing/razorpay/verify",
        "body": {
          "mode": "raw",
          "raw": "{\n  \"razorpay_order_id\": \"order_test\",\n  \"razorpay_payment_id\": \"pay_test\",\n  \"razorpay_signature\": \"signature_here\",\n  \"plan\": \"INDIVIDUAL\"\n}"
        }
      }
    },
    {
      "name": "Admin - Whitelist User",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" },
          { "key": "x-admin-key", "value": "{{admin_key}}" }
        ],
        "url": "http://localhost:8787/api/admin/whitelist",
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"user@example.com\",\n  \"whitelisted\": true\n}"
        }
      }
    },
    {
      "name": "Admin - Create Business Org",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" },
          { "key": "x-admin-key", "value": "{{admin_key}}" }
        ],
        "url": "http://localhost:8787/api/admin/create-business",
        "body": {
          "mode": "raw",
          "raw": "{\n  \"orgName\": \"Ares Business\",\n  \"adminEmail\": \"admin@company.com\",\n  \"adminName\": \"Admin User\",\n  \"password\": \"password123\"\n}"
        }
      }
    },
    {
      "name": "Connectors - Local SQL",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" },
          { "key": "Authorization", "value": "Bearer {{token}}" }
        ],
        "url": "http://localhost:8787/api/connectors/local-sql",
        "body": {
          "mode": "raw",
          "raw": "{\n  \"connectionString\": \"postgres://user:pass@localhost:5432/db\"\n}"
        }
      }
    },
    {
      "name": "Connectors - PostgreSQL",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" },
          { "key": "Authorization", "value": "Bearer {{token}}" }
        ],
        "url": "http://localhost:8787/api/connectors/postgres",
        "body": {
          "mode": "raw",
          "raw": "{\n  \"connectionString\": \"postgres://user:pass@host:5432/db?sslmode=require\"\n}"
        }
      }
    },
    {
      "name": "Connectors - MySQL",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" },
          { "key": "Authorization", "value": "Bearer {{token}}" }
        ],
        "url": "http://localhost:8787/api/connectors/mysql",
        "body": {
          "mode": "raw",
          "raw": "{\n  \"connectionString\": \"mysql://user:pass@host:3306/db\"\n}"
        }
      }
    },
    {
      "name": "Connectors - Firebase",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" },
          { "key": "Authorization", "value": "Bearer {{token}}" }
        ],
        "url": "http://localhost:8787/api/connectors/firebase",
        "body": {
          "mode": "raw",
          "raw": "{\n  \"projectId\": \"your-project-id\",\n  \"serviceAccountJson\": \"{...}\"\n}"
        }
      }
    }
  ]
}
